library(tidyverse)
library(readxl)
library(car)
library(reshape2)
library(psych)
library(lme4)
library(FactoMineR)
library(ggplot2)
library(dplyr)
library(factoextra)
library(stringr)
library(ggpubr)
library(ggcorrplot)
library(lmerTest) 

data_dir<- "C:/Users/sobitanab/Documents/Ade/Edges_2025"

subject_folders<- list.dirs(data_dir, full.names=TRUE, recursive=FALSE)

gender_mapping<- read_csv("C:/Users/sobitanab/Documents/Ade/Edges_2025/gender_mapfile2.csv")
head(gender_mapping)

all_data<- list()

for (folder in subject_folders) {
   # Construct each subject path
  
   subject_id<- basename(folder)

# modify line below for different hemisphere
   file_pattern<- paste0(subject_id,"_jackknife_sigConn_aparc35_node2vec/",subject_id,"_jackknife_sigConn_aparc35_inter_analysis_results.xlsx")
   

    file_path<- file.path(folder, pattern = file_pattern)

# check if excel file exist
    if (length(file_path)==0) {
       cat("File does not exist for:", subject_id, "\n")
    next
}

# Read sheet data
sheet3_data <- read_excel(file_path, sheet = "Edges and Weights")

# Combine
patient_data<- sheet3_data %>%
   mutate(
   PatientID = subject_id, 
   NodeID = rep(1:nrow(sheet3_data))
  )

# Append to the list
  all_data[[subject_id]] <- patient_data
}

# combine into a single data frame
if (length(all_data) > 0) {
   combined_data_interH <- bind_rows(all_data)
} else {
  stop("No data was loaded. Please check file paths.")
}

str(combined_data_interH)

combined_data_interH<- combined_data_interH %>%
        mutate(PatientID = as.character(PatientID))

gender_mapping<- gender_mapping %>%
        mutate(PatientID = as.character(PatientID))
# Filter
filtered_gender_mapping<- gender_mapping %>%
    filter(as.character(PatientID) %in% combined_data_interH$PatientID) 

# Merge with gender information
combined_data_interH <- combined_data_interH %>%
    left_join(filtered_gender_mapping, by = "PatientID")


# Check if gender information was successfully added
if(any(is.na(combined_data_interH$Gender))){
     stop("Some patients are missing gender information.")

# Check if all rows have been merged successfully
if(any(is.na(combined_data))){
   cat("Some rows are missing data after merging. Please check the input files.\n")
}
}

combined_data_interH$SSAGA_Educ.2<- as.character(combined_data_interH$SSAGA_Educ.2)
head(combined_data_interH)

# merge Source and Target columns into one
new_data_interH <- combined_data_interH %>%
      mutate(Edges = paste(Source, Target, sep = "-"))
      

head(new_data_interH)
Weight<- new_data_interH$Weight
write.csv(new_data_interH, file="combined_interH_Edges_2.csv")

# LMMs for each Node

# Fit models for each node
results_interH_edges <- new_data_interH %>%
  group_by(Edges) %>%
  summarise(
    Model = list(
        tryCatch(
            lmer(Weight ~ Gender + Age + Handedness + SSAGA_Educ.2 + (1 | PatientID), data = cur_data(),
              control=lmerControl(optimizer="bobyqa", optCtrl=list(maxfun=10000))),
         error = function(e)NULL
        )
      ),    

    GenderEffect = if(!is.null(Model[[1]])){
        coef_summary<- summary(Model[[1]])$coefficients
        if ("GenderMale" %in% rownames(coef_summary)){
            coef_summary["GenderMale", "Estimate"]
        } else {
          NA
        }
     } else {
       NA
     },
     PValue = if(!is.null(Model[[1]])){
        coef_summary<- summary(Model[[1]])$coefficients
        if ("GenderMale" %in% rownames(coef_summary)){
            coef_summary["GenderMale", "Pr(>|t|)"]
      } else {
          NA
        }
     } else {
       NA
     }
)
isSingular(results_eigen$Model[[1]])
failed_groups<- results_eigen %>% filter(is.na(GenderEffect) | is.na(PValue))
print(failed_groups)

# Print summary of results
#print("Summary of Results for Each Node:")
print(results_interH_edges)
results_interH_edges<- results_interH_edges[, !sapply(results_interH_edges, is.list)]
write.csv(results_interH_edges, file="interH_LModel_Edges_31025.csv")

# Visualization with error bars and p-values
plot_interH_Edges_data <- new_data_interH %>%
  group_by(Edges, Gender) %>%
  summarise(
    Mean = mean(Weight, na.rm = TRUE),
    SE = sd(Weight, na.rm = TRUE) / sqrt(n()),
    .groups = "drop"
  )

#ggplot(plot_RH_Edges_data, aes(x = Edges, y = Mean, fill = Gender)) +
ggplot(new_data_interH, aes(x = Edges, y = Weight, fill = Gender)) +
  geom_violin(alpha=0.6, trim = FALSE, position = position_dodge(0.8)) +
  #geom_boxplot(width=0.2, position=position_dodge(0.8), outlier.shape=NA, alpha=0.8)+
  #geom_bar(stat = "identity", position = position_dodge(0.8), width = 0.7) +
  #geom_errorbar(data=plot_interH_Edges_data, aes(x= Edges,ymin = Mean - SE, ymax = Mean + SE, color=Gender, group=Gender),
   #             position = position_dodge(0.8), width = 0.25) +
  scale_fill_manual(values=c("Male" = "blue", "Female" = "red")) +
  scale_color_manual(values=c("Male" = "blue", "Female" = "red")) +
  labs(
    title = "Gender Differences in the Inter Hemisphere",
    x = "Brain Connections in the Inter Hemisphere",
    y = "Weight"
  ) +
  theme_minimal() +
  theme(
    axis.text.x=element_text(angle=90, hjust=1),
    legend.title = element_blank(),
    panel.grid = element_blank()
  ) +
  geom_text(data = results_interH_edges, aes(x = Edges, y = max(new_data_interH$Weight) + 0.2,
                                label = ifelse(PValue < 0.05, "*", "")),
              inherit.aes = FALSE)
             #inherit.aes = FALSE, size = 5, color = "black")

ggsave(file = "interH_Edges_31025.jpg", dpi = 300)


# Filter
sig_inter_Edges<- results_interH_edges %>% filter(PValue<0.05) %>% pull (Edges)

#Subset
inter_edges_filtered<- new_data_interH %>% filter(Edges %in% sig_inter_Edges)

# stats for filtered dat
filter_interH_Edges <- inter_edges_filtered %>%
  group_by(Edges, Gender) %>%
  summarise(
    Mean = mean(Weight, na.rm = TRUE),
    SE = sd(Weight, na.rm = TRUE) / sqrt(n()),
    .groups = "drop"
  )

gender_colors<- c("Male" = "blue"
